{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/pc/build-vscode"
            },
            "command": "cmake \"Unix Makefiles\"  ${workspaceRoot}/pc",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make -j8",
            "options": {
                "cwd": "${workspaceRoot}/pc/build-vscode"
            },
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "base":"$gcc",
                    "fileLocation": ["absolute"],
                }
            ]
        }
    ]
}
