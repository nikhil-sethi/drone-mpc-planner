{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/pc/build-debug"
            },
            "command": "cmake \"Unix Makefiles\"  ${workspaceRoot}/pc",
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make -j8",
            "options": {
                "cwd": "${workspaceRoot}/pc/build-debug"
            },
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":["cmake"],
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}