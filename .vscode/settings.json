{
    "cmake.sourceDirectory": "${workspaceFolder}/pc/",
    "cmake.buildDirectory": "${workspaceFolder}/pc/build-vscode",
    "cmake.configureOnOpen": true,
    "cmake.preferredGenerators":[
        "Unix Makefiles",
        "Ninja"
    ],
    "astyle.astylerc": "${workspaceFolder}/config/astylerc",
    "astyle.cpp.enable": true,
    "breadcrumbs.enabled": true,
    "editor.defaultFormatter": "chiehyu.vscode-astyle",
    "editor.tabSize": 4,
    "search.exclude": {
        "${workspaceFolder}/pc/**": true
    },
    "search.showLineNumbers": true
}