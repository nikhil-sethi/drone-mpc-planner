{
    "cmake.sourceDirectory": "${workspaceFolder}/pc/",
    "cmake.buildDirectory": "${workspaceFolder}/pc/build-vscode",
    "cmake.configureOnOpen": true,
    "cmake.preferredGenerators":[
        "Unix Makefiles",
        "Ninja"
    ],
    "astyle.astylerc": "${workspaceFolder}/config/astylerc",
    "astyle.cpp.enable": true,
    "breadcrumbs.enabled": true,
    "editor.defaultFormatter": "chiehyu.vscode-astyle",
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "search.exclude": {
        "**/pc/build*/**": true,
        "**/pc/insect_logs/**": true,
        "**/Arduino/**": true,
        "**/analysis/**": true,
        "**/config/**": true,
        "**/doc/**": true,
        "**/third_party/**": true,
        "/usr/**": true,
    },
    "search.showLineNumbers": true,
    "files.associations": {
        "array": "cpp",
        "bitset": "cpp",
        "string_view": "cpp",
        "initializer_list": "cpp",
        "regex": "cpp",
        "utility": "cpp",
        "*.tcc": "cpp",
        "fstream": "cpp",
        "iosfwd": "cpp",
        "thread": "cpp",
        "type_traits": "cpp",
        "functional": "cpp",
        "unordered_map": "cpp",
        "istream": "cpp",
        "ostream": "cpp",
        "sstream": "cpp",
        "mutex": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "atomic": "cpp",
        "chrono": "cpp",
        "cinttypes": "cpp",
        "codecvt": "cpp",
        "complex": "cpp",
        "condition_variable": "cpp",
        "cstdint": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "filesystem": "cpp",
        "iterator": "cpp",
        "map": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "ratio": "cpp",
        "set": "cpp",
        "string": "cpp",
        "system_error": "cpp",
        "tuple": "cpp",
        "iomanip": "cpp",
        "iostream": "cpp",
        "limits": "cpp",
        "new": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "typeindex": "cpp",
        "typeinfo": "cpp",
        "valarray": "cpp",
        "csignal": "cpp",
        "hash_map": "cpp",
        "hash_set": "cpp",
        "random": "cpp",
        "future": "cpp"
    },
    "debug.internalConsoleOptions": "neverOpen"
}
