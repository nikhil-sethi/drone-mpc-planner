server {
    server_name dash.pats-drones.com dash.pats-drones.nl;

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/pats/code/pats/dashboard/pats.sock;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/dash.pats-drones.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/dash.pats-drones.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}


server {
    if ($host = dash.pats-drones.nl) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = dash.pats-drones.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name dash.pats-drones.com dash.pats-drones.nl;
    return 404; # managed by Certbot




}